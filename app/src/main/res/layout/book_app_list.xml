<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:weightSum="3">

        <com.esolz.fitnessapp.customviews.TitilliumRegular
            android:id="@+id/timing"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="08:00-9:00"
            android:textColor="#000000"
            android:textSize="18sp" />

        <com.esolz.fitnessapp.customviews.TitilliumBold
            android:id="@+id/apt"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="APP.1"
            android:textColor="#000000"
            android:textSize="18sp"


            />

        <com.esolz.fitnessapp.customviews.TitlliumLightButton
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#22A7F0"
            android:gravity="center"
            android:src="@drawable/default_selector"
            android:text="EX"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"


            />


    </LinearLayout>

</LinearLayout>
