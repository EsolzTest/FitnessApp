<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

    <RelativeLayout
        android:id="@+id/listitem_container"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/rowbgchat"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="75dp"
            android:layout_height="74dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/fruit"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="19dp"
            android:layout_toRightOf="@+id/image1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.esolz.fitnessapp.customviews.TitilliumBold
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="FRUIT &amp; VEGETABLES"
                android:textColor="#282828"
                android:textSize="18sp"
                android:textStyle="bold"></com.esolz.fitnessapp.customviews.TitilliumBold>

            <com.esolz.fitnessapp.customviews.TitilliumRegular
                android:id="@+id/itemDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingTop="4dp"
                android:text="FRUIT &amp; VEGETABLES hdfglkfbkjgflkxfvl sdnjlblkgfblkfjbg fngbvkljfnbjlfg FRUIT &amp; VEGETABLES hdfglkfbkjgflkxfvl sdnjlblkgfblkfjbg fngbvkljfnbjlfg FRUIT &amp; VEGETABLES hdfglkfbkjgflkxfvl sdnjlblkgfblkfjbg fngbvkljfnbjlfg FRUIT &amp; VEGETABLES hdfglkfbkjgflkxfvl sdnjlblkgfblkfjbg fngbvkljfnbjlfg"
                android:textColor="#282828"
                android:textSize="14sp"></com.esolz.fitnessapp.customviews.TitilliumRegular>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>