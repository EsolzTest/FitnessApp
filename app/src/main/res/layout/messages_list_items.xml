<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/rowbgchat"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="40dp"
    android:paddingTop="15dp" >

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:clickable="false" >

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shape"
            android:clickable="false" >
        </ImageView>

        <com.esolz.fitnessapp.customviews.HelveticaSemiBoldLight
            android:id="@+id/imageviewreddotnumberofchat"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/reddotbg"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="12sp" >
        </com.esolz.fitnessapp.customviews.HelveticaSemiBoldLight>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:clickable="false"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:weightSum="6"
            >

            <com.esolz.fitnessapp.customviews.TitilliumBold
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:layout_weight="5.98"
                android:text=""
                android:textColor="#282828"
                android:textSize="16sp"
                android:textStyle="bold" >
            </com.esolz.fitnessapp.customviews.TitilliumBold>

            <com.esolz.fitnessapp.customviews.TitilliumSemiBold
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:text="Today 08:29"
                android:textColor="#22A7F0"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/user_name"
                android:layout_marginLeft="25dp"
                android:singleLine="true"


                />
        </LinearLayout>

        <com.esolz.fitnessapp.customviews.TitilliumRegular
            android:id="@+id/user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:clickable="false"
            android:maxLines="2"
            android:text="hello hello hello hellohellohellohellohellohellohellohellohellohellohellohellohellohellohello"
            android:textColor="#282828"
            android:textSize="16sp" />


    </RelativeLayout>

</LinearLayout>