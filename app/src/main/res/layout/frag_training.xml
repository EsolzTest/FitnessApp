<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#22A7F0">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_default"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/appointment_back_width"
                    android:layout_height="@dimen/appointment_back_height"
                    android:background="@drawable/appback"/>
            </LinearLayout>

            <com.esolz.fitnessapp.customviews.TitilliumSemiBold
                android:id="@+id/txt_title_exercise"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_default"
                android:orientation="vertical"
                android:padding="3dp">

                <com.esolz.fitnessapp.customviews.TitilliumLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textColor="#ffffff"
                    android:textSize="20sp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <RelativeLayout
                android:id="@+id/ll_topbody"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">
                </android.support.v4.view.ViewPager>

                <ProgressBar
                    android:id="@+id/viewpager_pbar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_midbody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_botmbody"
                android:layout_below="@+id/ll_topbody"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <RelativeLayout
                        android:id="@+id/rl_left_click"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_default"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/img_leftarrow"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/arrow2">
                        </ImageView>

                        <com.esolz.fitnessapp.customviews.TitilliumRegular
                            android:id="@+id/txt_left"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_leftarrow"
                            android:singleLine="true"
                            android:text="Seated Dips"
                            android:textColor="#333333"
                            android:textSize="17sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_right_click"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_default"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/img_rightarrow"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/arrow"/>

                        <com.esolz.fitnessapp.customviews.TitilliumRegular
                            android:id="@+id/txt_right"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/img_rightarrow"
                            android:singleLine="true"
                            android:text="Dumbbell Press"
                            android:textColor="#333333"
                            android:textSize="17sp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <ProgressBar
                        android:id="@+id/prog_training"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>

                    <ListView
                        android:id="@+id/list_trn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">
                    </ListView>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_botmbody"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="6dp">

                <LinearLayout
                    android:id="@+id/ll_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#BDBDBD"
                    android:clickable="true"
                    android:gravity="center">

                    <com.esolz.fitnessapp.customviews.TitilliumRegular
                        android:id="@+id/txt_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="16sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/prog_finish"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>